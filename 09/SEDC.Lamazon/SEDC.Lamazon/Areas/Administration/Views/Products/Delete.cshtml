@model ProductViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)

    <div class="card">
        <div class="card-header">
            <p>Create</p>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group bmd-form-group">
                        <label asp-for="Name" class="bmd-label-floating"></label>
                        <input asp-for="Name" class="form-control" disabled />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group bmd-form-group is-filled">
                        <label asp-for="ProductCategory" class="bmd-label-floating"></label>
                        <select asp-for="ProductCategoryId" asp-items="@ViewBag.ProductCategoryId" asp-default-value="Select category" class="form-control ddl-search" disabled></select>
                        <span asp-validation-for="ProductCategoryId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group bmd-form-group">
                        <label asp-for="Description" class="bmd-label-floating"></label>
                        <textarea asp-for="Description" class="form-control" rows="4" disabled></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group bmd-form-group">
                        <label asp-for="ImageUrl" class="bmd-label-floating"></label>
                        <input asp-for="ImageUrl" class="form-control" disabled />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group bmd-form-group">
                        <label asp-for="Price" class="bmd-label-floating"></label>
                        <input asp-for="Price" class="form-control" disabled />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group bmd-form-group is-filled">
                        <label asp-for="IsFeatured" class="bmd-label-floating"></label>
                        <input asp-for="IsFeatured" class="form-control" disabled />
                        <span asp-validation-for="IsFeatured" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer float-right">
            <div class="mt-5">
                <a class="btn btn-default" asp-controller="Products" asp-action="Index">Cancel</a>
                <button class="ms-2 btn btn-danger" type="button" onclick="$('#ConfirmDeleteModal').modal('show')">Delete</button>
            </div>
        </div>
    </div>

    <div class="modal fade" id="ConfirmDeleteModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Delete product</h4>
                    <a class="close float-end" data-dismiss="modal">×</a>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete "@Model.Name"?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button class="ml-2 btn btn-danger" type="submit">Confirm Delete</button>
                </div>
            </div>
        </div>
    </div>
}