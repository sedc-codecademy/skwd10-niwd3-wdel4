@model ProductViewModel

<h2>Product Details for @Model.Name</h2>

<hr/>
<p>Id: @Model.Id</p>
<p>Name: @Model.Name</p>
<p>Info: @Model.Info</p>
<p>Description: @Model.Description</p>
<p>Category Type: @Model.ProductCategory.Name</p>
<p>Price: @Model.Price</p>
<img class="product-image" src="@Model.ImageUrl"/>
<hr/>
<a asp-controller="Products" asp-action="Index">Return</a>

