@model ProductCategoryViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)

    <div class="card">
        <div class="card-header">
            <p>Edit</p>
        </div>
        <div class="card-body">
            <div class="form-group bmd-form-group">
                @Html.LabelFor(x => x.Name, "Name", new { @class = "bmd-label-floating" })
                @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="card-footer float-right">
            <div class="mt-5">
                <a class="btn btn-default" asp-controller="ProductCategories" asp-action="Index">Cancel</a>
                <button class="ms-2 btn btn-success" type="submit">Save</button>
            </div>
        </div>
    </div>   
}