@model ProductCategoryViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)

    <div class="card">
        <div class="card-header">
            <p>Delete</p>
        </div>
        <div class="card-body">
            <div class="form-group bmd-form-group">
                @Html.LabelFor(x => x.Name, "Name", new { @class = "bmd-label-floating" })
                @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control", @readonly="readonly" } })
            </div>
        </div>
        <div class="card-footer float-right">
            <div class="mt-5">
                <a class="btn btn-default" asp-controller="ProductCategories" asp-action="Index">Cancel</a>
                <button class="ms-2 btn btn-danger" type="button" onclick="$('#ConfirmDeleteModal').modal('show')">Delete</button>
            </div>
        </div>
    </div>

    <div class="modal fade" id="ConfirmDeleteModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Delete product category</h4>
                    <a class="btn float-end" data-dismiss="modal">×</a>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete "@Model.Name"?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button class="ml-2 btn btn-danger" type="submit">Confirm Delete</button>
                </div>
            </div>
        </div>
    </div>
}
