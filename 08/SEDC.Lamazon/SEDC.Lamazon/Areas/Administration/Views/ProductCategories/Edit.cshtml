@model ProductCategoryViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.ProductCategoryStatus)

    <div class="card">
        <div class="card-header">
            <p>Edit</p>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group bmd-form-group">
                        <label asp-for="Name" class="bmd-label-floating"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer float-right">
            <div class="mt-5">
                <a class="btn btn-default" asp-controller="ProductCategories" asp-action="Index">Cancel</a>
                <button class="ms-2 btn btn-success" type="submit">Save</button>
            </div>
        </div>
    </div>   
}